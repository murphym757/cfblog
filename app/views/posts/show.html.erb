<div class="container show-page">
  <div class="row">
    <div class="col-xs col-md-6 col-lg-6">
      <div class="panel panel-borderless">

        <h1 class="post-title">
          <%= @post.title %>
        </h1>
        <br>
        <p class="post-body">
          <%= @post.body %>
        </p>

        <p class="post-date">
          Posted
          <%= time_ago_in_words(@post.created_at) %>
          ago
          <br>
          <%= link_to 'Edit', edit_post_path(@post), class: "links" %> |<%= link_to ' Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure about this?" },  class: "links" %>
        </p>

      </div>
    </div>
