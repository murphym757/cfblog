<!-- Navigation -->
<nav class="navbar navbar-custom" role="navigation">
  <div class="container">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="logo-heading">
        <img><%= image_tag("cf-blog_logo.svg", alt: "logo-img", height: 720, width: 720) %></img>
      </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div id="navbar" class="navbar-collapse">
      <ul class="nav navbar-nav">
        <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
        <li class="hidden">
          <a href="#page-top"></a>
        </li>
        <% if user_signed_in? %>
        <li><%= link_to "Home", root_path, method: :get %></li>
        <li><%= link_to "New Post", new_post_path, class: "active" %></li>
        <li><%= link_to "Logout", destroy_user_session_path, data: { confirm: "Are you sure that you want to sign out?" }, method: :delete %></li>
        <li><%= link_to current_user.username, edit_user_registration_path, class: "username-styling" %></li>
        <li><%= image_tag(current_user.avatar.url(:thumb), class: "round-image-50") %></li>
        </ul>
        <% else %>
        <li><%= link_to "Home", root_path, method: :get %></li>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "active" %></li>
        <li><%= link_to "Sign In", new_user_session_path, class: "active" %></li>
        <% end %>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  </div>
  <!-- /.container -->
</nav>
