<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="panel panel-borderless">

      <h2 class="form-title">Sign up</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <br>
      <p>
        <%= f.file_field :avatar, hide_label: true, class: "upload-button" %>
      </p>
      <p>
        <%= f.text_field :username, hide_label: true, autofocus: true, placeholder: "Username" %>
      </p>
      <p>
        <%= f.email_field :email, hide_label: true, autofocus: true, placeholder: "E-mail" %>
      </p>
      <p class="password-confirm">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", hide_label: true, autofocus: true, placeholder: "Password" %>
      </p>
      <p>
        <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, autofocus: true, placeholder: "Password Confirmation" %>
      </p>
      <div class="button">
        <%= f.submit "Sign Up", class: "btn btn-cfb" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
