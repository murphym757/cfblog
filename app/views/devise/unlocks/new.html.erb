<div class="container show-page">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel panel-borderless">

        <h2 class="form-title">Resend unlock instructions</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <br>
          <p>
            <%= f.email_field :email, hide_label: true, autofocus: true, placeholder: "E-mail" %>
          </p>

          <div class="button">
          <%= f.submit "Resend unlock instructions", class: "btn btn-cfb" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
