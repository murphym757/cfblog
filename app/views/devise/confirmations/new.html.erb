<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="panel panel-borderless">

      <h2 class="form-title">Resend confirmation instructions</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <br>
      <p>
        <%= f.email_field :email, hide_label: true, autofocus: true, placeholder: "E-mail",  value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </p>

      <div class="button">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-cfb" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
