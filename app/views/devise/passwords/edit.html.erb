<div class="container show-page">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel panel-borderless">

        <h2 class="form-title">Change your password</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <br>
          <p>
            <%= f.hidden_field :reset_password_token %>
          </p>
          <p class="password-confirm">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", hide_label: true, autofocus: true, placeholder: "New Password" %>
          </p>
          <p>
            <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, autofocus: true, placeholder: "Confirm new password" %>
          </p>
          <div class="button">
          <%= f.submit "Change my password", class: "btn btn-cfb" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
